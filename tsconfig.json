{
    "compilerOptions": {
      "module": "esnext",
      "target": "esnext",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "strict": true,
      "jsx": "preserve",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "useDefineForClassFields": true,
      "lib": ["dom", "esnext"],
      "types": ["vite/client"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
    "exclude": ["node_modules"]
  }
  